        <img width="100%" height="100%" class="cover" src="~/Images/HomeSlideshow/slide1.jpg" onclick="test();" />
        <img width="100%" height="100%" class="cover" src="~/Images/HomeSlideshow/slide7.jpg" onclick="test();" />
        <img width="100%" height="100%" class="cover" src="~/Images/HomeSlideshow/slide8.jpg" onclick="test();" />
        <img width="100%" height="100%" class="cover" src="~/Images/HomeSlideshow/slide9.jpg" onclick="test();" />
        <img width="100%" height="100%" class="cover" src="~/Images/HomeSlideshow/slide10.jpg" onclick="test();" />
    </div>
</div>